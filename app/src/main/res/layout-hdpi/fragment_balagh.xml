<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="420dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@color/cardview_light_background"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_light_background">

            <Button
                android:id="@+id/suiv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/next2"
                android:elevation="2dp"
                android:theme="@style/MyButton"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.97"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/view"
                android:layout_width="280dp"
                android:layout_height="1px"
                android:layout_marginTop="144dp"
                android:background="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view3"
                android:layout_width="280dp"
                android:layout_height="1px"
                android:layout_marginTop="232dp"
                android:background="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:layout_marginTop="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo_avec_titre_h" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="140dp"
                android:layout_marginStart="140dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    app:srcCompat="@drawable/cercle_red" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    app:srcCompat="@drawable/cercle" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    app:srcCompat="@drawable/cercle" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    app:srcCompat="@drawable/cercle" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    app:srcCompat="@drawable/cercle" />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="30dp"
            android:paddingLeft="10dp"
            android:paddingTop="50dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/champagne"
                android:freezesText="false"
                android:hapticFeedbackEnabled="true"
                android:text="@string/declareur"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/declare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <RadioButton
                    android:id="@+id/rd_vict"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorPrimary"
                    android:fontFamily="@font/champagne"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="@string/victime"
                    android:textColor="#90000000"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/rd_temo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorPrimary"
                    android:fontFamily="@font/champagne"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="@string/t_moin"
                    android:textColor="#90000000"
                    android:textSize="18sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/champagne"
                android:freezesText="false"
                android:hapticFeedbackEnabled="true"
                android:text="@string/sexe_victime"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/sexe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <RadioButton
                    android:id="@+id/homme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorPrimary"
                    android:fontFamily="@font/champagne"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="@string/homme"
                    android:textColor="#90000000"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/famme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorPrimary"
                    android:fontFamily="@font/champagne"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="@string/femme"
                    android:textColor="#90000000"
                    android:textSize="18sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/champagne"
                android:freezesText="false"
                android:hapticFeedbackEnabled="true"
                android:text="@string/tranche_d_ge_victime"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/tranche_vict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="9dp">

                <RadioButton
                    android:id="@+id/mois18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorPrimary"
                    android:fontFamily="@font/champagne"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="@string/moins_de_18_ans"
                    android:textColor="#90000000"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/entre18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorPrimary"
                    android:fontFamily="@font/champagne"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="@string/de_18_ans_35_ans"
                    android:textColor="#90000000"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/entre35"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorPrimary"
                    android:fontFamily="@font/champagne"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="@string/de_35_65_ans"
                    android:textColor="#90000000"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/plus65"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorPrimary"
                    android:fontFamily="@font/champagne"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="@string/_65_ans_et_plus"
                    android:textColor="#90000000"
                    android:textSize="18sp" />
            </RadioGroup>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>