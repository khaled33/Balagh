<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Balagh6Fragment">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="420dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@color/cardview_light_background"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_light_background">

            <Button
                android:id="@+id/button_valider"
                android:layout_width="154dp"
                android:layout_height="40dp"
                android:layout_marginEnd="104dp"
                android:layout_marginStart="105dp"
                android:layout_marginTop="276dp"
                android:layout_weight="1"
                android:text="@string/envoyer"
                android:textColor="@color/ic_launcher_background"
                android:textSize="12sp"
                android:theme="@style/MyButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.505"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button_modifi"
                android:layout_width="154dp"
                android:layout_height="40dp"
                android:layout_marginEnd="105dp"
                android:layout_marginStart="104dp"
                android:layout_weight="1"
                android:text="@string/modifier"
                android:textColor="@color/ic_launcher_background"
                android:textSize="12sp"
                android:theme="@style/MyButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_valider" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginEnd="140dp"
                android:layout_marginStart="140dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">


                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    app:srcCompat="@drawable/cercle_red" />

                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    app:srcCompat="@drawable/cercle_red" />

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    app:srcCompat="@drawable/cercle_red" />

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    app:srcCompat="@drawable/cercle_red" />

                <ImageView
                    android:id="@+id/imageView25"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    app:srcCompat="@drawable/cercle_red" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="258dp"
                android:layout_height="80dp"
                android:layout_marginTop="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo_avec_titre_h" />

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="61dp"
                android:layout_height="59dp"
                android:layout_marginEnd="130dp"
                android:layout_marginStart="130dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/tick"
                app:layout_constraintBottom_toTopOf="@+id/textView6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.533"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView14" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/champagne"
                android:text="@string/termin"
                android:textSize="36sp"
                android:textStyle="bold"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView20" />

            <TextView
                android:id="@+id/txt_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/champagne"
                android:text="@string/l_op_ration_balagh_est_termin_avec_succes"
                android:textAlignment="center"
                android:textSize="24sp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>